# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith (Optional - for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=pca-agent

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pca_db
REDIS_URL=redis://localhost:6379/0

# Storage
UPLOAD_DIR=./data/uploads
REPORT_DIR=./data/reports
SNAPSHOT_DIR=./data/snapshots

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Model Configuration
DEFAULT_VLM_MODEL=gpt-4-vision-preview
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
TEMPERATURE=0.1
MAX_TOKENS=4096

# Report Configuration
DEFAULT_TEMPLATE=corporate
BRAND_COLOR=#0066CC
COMPANY_NAME=Your Company
COMPANY_LOGO_PATH=./assets/logo.png

# Processing Limits
MAX_UPLOAD_SIZE_MB=50
MAX_SNAPSHOTS_PER_CAMPAIGN=20
CONCURRENT_VISION_CALLS=3

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_OCR=true
ENABLE_CHART_RECREATION=true
ENABLE_ACHIEVEMENT_DETECTION=true
ENABLE_CROSS_CHANNEL_REASONING=true
